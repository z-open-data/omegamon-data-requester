{
  "name": "public-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite build --watch",
    "verifyAndBuild": "pnpm prettier && pnpm lint && pnpm typecheck && pnpm build",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc -b --noEmit",
    "prettier": "prettier --check ./",
    "prettier:fix": "prettier --write ./",
    "lint": "eslint  --cache --max-warnings=0 --report-unused-disable-directives --ignore-path ./.gitignore --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "pnpm run lint --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest --watch --onlyChanged",
    "test:silent": "jest --watch --onlyChanged --silent",
    "test:ci": "jest --passWithNoTests --maxWorkers 4 --silent"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0"
  },
